//- Event editor
div.event-detail(layout='column' layout-fill ng-cloak)



	//- Navbar
	md-toolbar
		.md-toolbar-tools
			b Event
			span(flex)
			md-button(ng-click="eventCtrl.clickedCancel()")
				| Cancel


	//- Container
	md-content.md-padding(layout='column')
		.md-inline-form(layout='column')

			md-input-container
				label Title
				input(ng-model='eventCtrl.editEvent.name')

			div(layout="row")
				md-input-container(flex)
					label From
					input(ng-model='eventCtrl.editEvent.from', type="date")

				md-input-container(flex)
					label Time
					input(ng-model='eventCtrl.editEvent.from', type="time", step="1000")


			md-input-container(flex)
				label Description
				textarea(ng-model='eventCtrl.editEvent.desc' md-maxlength='150' rows='5' md-select-on-focus='')

		md-button.md-primary.md-raised(ng-click="eventCtrl.clickedSave()") Save

