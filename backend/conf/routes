# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()

#Events
GET		/api/v1/events				controllers.Application.getEvents()
GET		/api/v1/event/:id			controllers.Application.getEvent(id: String)

#Users
GET		/api/v1/users				controllers.Application.getUsers()
GET		/api/v1/user/:id			controllers.Application.getUser(id: String)
POST		/api/v1/user				controllers.Application.postUser()

# Map static resources from the /public folder to the /assets URL path
GET     /*file               		controllers.Assets.at(path="/public/www", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
