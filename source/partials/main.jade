//------------------------------
//- TV Channel list
.ui.grid(style="margin-top:10px")
	.row(ng-show="mainCtrl.view.mode == 'channels'")
		.column
			.ui.page.grid
				.one.column.row
					.column
						table.ui.padded.table
							thead
								tr
									th.four.wide Kanal
									th.ten.wide Programm
									th.two.wide Action
							tbody
								tr(ng-repeat="channel in mainCtrl.dataService.storage.channels")
									td(ng-click="mainCtrl.clickedChannel(channel)", style="cursor:pointer")
										.ui.avatar.image
											img(ng-src="/images/logos/{{channel.info.logoUrl}}", style="background-color:grey")
										| {{channel.info.name}}
									td(ng-click="mainCtrl.clickedChannel(channel)", style="cursor:pointer")
										div(epg-program, program="mainCtrl.dataService.storage.eventsMap[channel.id]")

									td
										.ui.mini.fluid.buttons
											.ui.blue.button(ng-click="mainCtrl.clickedEditChannel(channel)") Edit
											.ui.button(ng-click="mainCtrl.clickedChannel(channel)") List