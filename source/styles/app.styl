

/* Import nib */
@import 'nib'

body
	font-family "Open Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif !important
	position relative
	height 100%
	width 100%
	padding 0
	margin 0
	overflow: scroll

.angular-google-map-container
	height 300px
	width 300px
	border-radius: 50%

#hero
	margin-top 0em



.ui.slider.range input[type="range"] {
	-webkit-appearance: none;
	border-width: 1px;
	border-style: solid;
	border-radius: 50rem;
	border-color: rgba(0, 0, 0, 0.1);
	padding: 3px 5px;
}
.ui.slider.range input[type="range"]::-moz-range-track {
	background: none;
	border: none;
}
.ui.slider.range input[type="range"]::-webkit-slider-thumb {
	-webkit-appearance: none;
	background: #89B84C;
	border-radius: 50rem;
	height: 0.7em;
	width: 0.7em;
}
.ui.slider.range input[type="range"]::-moz-range-thumb {
	background: #89B84C;
	border-color: #89B84C;
	border-radius: 50rem;
	height: 0.7em;
	width: 0.7em;
}