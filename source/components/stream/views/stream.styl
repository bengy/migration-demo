@import "nib"
.st-title
	padding:16px 16px 0 16px
	font-size: 1.3em

.st-title-clip
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2; /* number of lines to show */
	line-height: 32px;		  /* fallback */
	max-height: 32px*2;		 /* fallback */


.st-content
	padding:0 16px 16px 16px
	font-size: 0.9em

.item-amazon-content
	display(flex)
	flex-direction(row)
	align-items(stretch)
	.image-wrapper
		flex-grow(1)
		width:100%
		display(flex)
		flex-direction(column)
		align-items(center)
		img
			width: 100%
			max-width: 120px
			max-height: 120px

	.text-wrapper
		flex-grow(2)
		width:100%

.st-twitter-card
	display(flex)
	flex-direction(row)
	.st-twitter-image
		img
			width 100px
			height:100px

	.st-twitter-content
		display(flex)
		flex-direction(column)
		.st-title
			padding:10px 10px 0 10px
			font-size: 1.3em
		.st-content
			padding:0 10px 10px 10px
			font-size: 0.9em

.st-item-heart
	opacity: 0
	position: absolute;
	left: 30px;

.st-item-draggable
	position:relative
	background-color: transparent